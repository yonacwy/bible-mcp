{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "sourceMap": true,
    "isolatedModules": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.json",
    "scripts/**/*.ts"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
